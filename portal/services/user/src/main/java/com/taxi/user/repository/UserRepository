package com.taxi.user.repository;

import com.taxi.framework.user.dao.UserDao;
import com.taxi.framework.user.dto.BaseUserAccessibilityDTO;
import com.taxi.framework.user.service.AccessibilityService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.ArrayList;
import java.util.List;

@Service
public class UserRepository {

    List<UserDao> users = new ArrayList<>();

    public void addUser (UserDao user) {
        users.add(user);
    }

    public UserDao getUser (Long id) {
        System.out.println("users = " + users);
        for (UserDao user : users) {
            if (user.getId().equals(id)) {
                return user;
            }
        }
        return null;
    }

    public void changeTextSize (int textSize, Long id){
        for (UserDao user : users) {
            if (user.getId().equals(id)) {
                user.setTextSize(textSize);
            }
        }
    }

    public void changeColorThem (String colorThem, Long id){
        for (UserDao user : users) {
            if (user.getId().equals(id)) {
                user.setColorThem(colorThem);
            }
        }
    }
}
