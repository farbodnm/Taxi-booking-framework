<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="add-created-at-to-existing-feedback-tables" author="hamidrezashahabi">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="user_feedback" columnName="created_at"/>
            </not>
        </preConditions>
        <addColumn tableName="user_feedback">
            <column name="created_at" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="add-created-at-to-existing-driver-feedback-table" author="hamidrezashahabi">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="driver_feedback" columnName="created_at"/>
            </not>
        </preConditions>
        <addColumn tableName="driver_feedback">
            <column name="created_at" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>